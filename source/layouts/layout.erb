<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "The Middleman" %></title>
    
    <link href="/middleman-search-example/stylesheets/normalize.css" media="screen" rel="stylesheet" type="text/css">
    <link href="/middleman-search-example/stylesheets/all.css" media="screen" rel="stylesheet" type="text/css">

    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js" %>
    <script src="/middleman-search-example/javascripts/all.js" type="text/javascript"></script>
  </head>
  
  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>